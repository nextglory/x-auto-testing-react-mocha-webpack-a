{
  "name": "x-react-app-with-mocha",
  "version": "1.0.0",
  "description": "x app series: react+mocha+webpack",
  "author": "Andy",
  "license": "MIT",
  "main": "./node/app.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --require ./tests/setup.js ./src/**/*.spec.js",
    "test-coverage": "nyc mocha --compilers js:babel-core/register --require ./tests/setup.js ./src/**/*.spec.js",
    "start": "trap 'kill %1; kill %2' SIGINT && webpack-dev-server --config webpack.config.js --content-base dist/ --inline & webpack-dev-server --config webpack.tests.config.js  --content-base unit-tests/ --inline & node ./server/app.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "reporter": ["html","text"],
    "report-dir": "./_coverage"
  },
  "dependencies": {
    "react": "^15.4.0",
    "react-dom": "^15.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "body-parser": "^1.15.0",
    "connect": "^3.4.1",
    "expect": "^1.16.0",
    "fetch-mock": "^4.3.1",
    "file-loader": "^0.8.5",
    "jsdom": "^8.2.0",
    "material-design-lite": "^1.3.0",
    "mocha": "^2.4.5",
    "mocha-loader": "^0.7.1",
    "nyc": "^11.2.1",
    "open-browser-webpack-plugin": "0.0.2",
    "react-addons-test-utils": "^15.6.0",
    "source-map-loader": "^0.1.5",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
